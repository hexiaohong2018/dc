}
.user-info{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #f44;
  /* border-radius: 50%/50%; */
}
.user-info .head{
  display: flex;
  justify-content: flex-start;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding-left: 50rpx;
  align-items: center;
  
}
.user-info .money{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 125rpx;
  width: 100%;
  position: relative;
}
