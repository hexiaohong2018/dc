.head .url{
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
  overflow: hidden;
}
.head .name{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  height: 100%;
  margin-left: 20rpx;
}
.head .name .login{
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}
.head .name .grade{
  font-size: 22rpx;
  color:rgba(255,255,255,0.7)
}
.money li{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: white;
  height: 80rpx;
  width: 33%;
  position: relative;
}

.money li .title{
  font-size: 28rpx;
}
.money li .value{
  font-size: 22rpx;
}
.money li:not(:last-child)::after{
  content: "";
  position: absolute;
  height: 60%;
  width: 1px;
  background: rgba(255,255,255,0.7);
  right: 0;
  top: 50%;
  transform: translateY(-50%);

}

.activity{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx;
  background: white;
  /* border-radius: 10rpx; */
  box-shadow: 0px 0px 4rpx 2rpx #eee;
  color: #666;
}
.activity li{
  width: 25%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  color: #f44;
  font-size: 40rpx;
}
.activity li .des{
  font-size: 22rpx;
  color: #666;
}